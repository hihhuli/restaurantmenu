		                        <LinearLayout
		                            android:id="@+id/itemDescriptionLayout"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_column="1"
		                            android:layout_row="0"
		                            android:layout_marginLeft="10dp"
		                            android:layout_marginTop="10dp"
		                            android:orientation="vertical" >

		                            <TextView
		                                android:id="@+id/expandedItemTitleView"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="@string/item2_title"
		                                android:textAppearance="?android:attr/textAppearanceLarge"
		                                android:textColor="#000080"
		                                android:typeface="serif" />

		                            <TextView
		                                android:id="@+id/itemDescriptionView"
		                                android:layout_width="230dp"
		                                android:layout_height="wrap_content"
		                                android:layout_marginTop="10dp"
		                                android:text="@string/item_description"
		                                android:textAppearance="?android:attr/textAppearanceMedium"
		                                android:textColor="#000080"
		                                android:typeface="serif" />
		                        </LinearLayout>
		                    
		                        <LinearLayout
		                            android:id="@+id/itemInfoLayout"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_column="0"
		                            android:layout_row="1"
		                            android:layout_marginLeft="20dp"
		                            android:layout_marginTop="10dp"
		                            android:orientation="vertical" >
		                            
		                            <TextView
		                                android:id="@+id/expandedItemDietsView"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:text="@string/item2_diets"
		                                android:textAppearance="?android:attr/textAppearanceMedium"
		                                android:textColor="#000080"
		                                android:typeface="serif" />
		                            
		                            <TextView
		                                android:id="@+id/itemSpicinessView"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginTop="10dp"
		                                android:text="@string/item_spiciness"
		                                android:textAppearance="?android:attr/textAppearanceMedium"
		                                android:textColor="#000080"
		                                android:typeface="serif" />
		                               
		                            <Button
	                    				android:id="@+id/likeButton"
	                    				style="@android:style/Widget.Holo.Button.Borderless"
	                    				android:layout_width="wrap_content"
	                    				android:layout_height="wrap_content"
	                    				android:layout_marginTop="10dp"
	                    				android:clickable="true"
	                    				android:drawablePadding="10dp"
	                    				android:drawableRight="@drawable/like"
	                    				android:text="@string/item_likes"
	                    				android:textColor="#000080"
	                    				android:typeface="serif"
	                   					android:textAppearance="?android:attr/textAppearanceMedium" />
		                            
		                            <TextView 
		                                android:id="@+id/ingredientsView"
		                                android:layout_width="wrap_content"
		                                android:layout_height="wrap_content"
		                                android:layout_marginTop="10dp"
		                                android:text="@string/ingredients"
		                                android:textAppearance="?android:attr/textAppearanceMedium"
		                                android:textColor="#000080"
		                                android:typeface="serif" />
						                
						                <CheckBox
										    android:id="@+id/checkBox1"
										    android:layout_width="wrap_content"
										    android:layout_height="wrap_content"
										    android:text="@string/chkbox_chicken"
										    android:textAppearance="?android:attr/textAppearanceSmall"
		                                	android:textColor="#000080"
		                                	android:typeface="serif"
										    android:checked="true" />
		                                    
		                                <CheckBox
										    android:id="@+id/checkBox2"
										    android:layout_width="wrap_content"
