<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2B48C"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/tabbar"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tabButton1"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/starters"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/tabButton2"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/pizzas"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/tabButton3"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/pastas"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/tabButton4"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/burgers"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/tabButton5"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/drinks"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </TabWidget>

       <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           	android:background="@drawable/border_small"
			android:orientation="vertical" >

           	<LinearLayout
				android:id="@+id/testi"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
                
	            <LinearLayout
	                android:id="@+id/buttonLayout1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="20dp"
	                android:gravity="center_vertical"
	                android:orientation="horizontal" >
	
	                <Button
	                    android:id="@+id/searchButton"
	                    style="@android:style/Widget.Holo.Button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="20dp"
	                    android:clickable="true"
	                    android:padding="10dp"
	                    android:drawablePadding="10dp"
	                    android:drawableRight="@android:drawable/ic_menu_search"
	                    android:text="@string/search"
	                    android:textColor="#000080"
	                    android:textStyle="bold"
	                    android:typeface="serif"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	
	                <Button
	                    android:id="@+id/waiterButton"
	                    style="@android:style/Widget.Holo.Button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="180dp"
	                    android:clickable="true"
	                    android:padding="10dp"
	                    android:drawablePadding="10dp"
	                    android:drawableRight="@android:drawable/ic_popup_reminder"
	                    android:text="@string/call_waiter"
	                    android:textColor="#000080"
	                    android:textStyle="bold"
	                    android:typeface="serif"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	            </LinearLayout>
	
	            <ScrollView
	                android:id="@+id/itemScrollView"
	                android:layout_width="match_parent"
	                android:layout_height="720dp"
	                android:layout_marginTop="10dp"
	                android:scrollbars="vertical"
	                android:scrollbarAlwaysDrawVerticalTrack="true"
	                android:fadeScrollbars="false"
	                android:scrollbarFadeDuration="0">
	                
	                <LinearLayout
	                    android:id="@+id/scrollViewLayout"
	                    android:layout_width="match_parent"
	                	android:layout_height="wrap_content"
	                	android:orientation="vertical">
	                	
		                <LinearLayout
		                    android:id="@+id/smallItemLayout1"
		                    android:layout_width="525dp"
		                    android:layout_height="wrap_content"
		                    android:layout_marginLeft="15dp"
		                    android:layout_marginTop="10dp"
		                    android:orientation="horizontal"
		                    android:background="@drawable/border_large"
		                    android:clickable="true">
		                    
		                    <TextView 
		                        android:id="@+id/itemTitleView1"
		            			android:layout_width="245dp"
		            			android:layout_height="wrap_content"
		            			android:layout_marginTop="20dp"
		            			android:layout_marginLeft="10dp"
		            			android:layout_marginBottom="20dp"
		            			android:text="@string/item1_title"
		           				android:textColor="#000080"
		            			android:typeface="serif"
		            			android:textAppearance="?android:attr/textAppearanceLarge" />
		                    
		                     <TextView 
		                        android:id="@+id/itemDietsView1"
		            			android:layout_width="110dp"
		            			android:layout_height="wrap_content"
		            			android:layout_marginTop="20dp"
		            			android:layout_marginBottom="20dp"
		            			android:text="@string/item1_diets"
		           				android:textColor="#000080"
		            			android:typeface="serif"
		            			android:textAppearance="?android:attr/textAppearanceLarge" />
		                     
		                     <TextView 
		                        android:id="@+id/itemPriceView1"
		            			android:layout_width="150dp"
		            			android:layout_height="wrap_content"
		            			android:layout_marginTop="20dp"
		            			android:layout_marginBottom="20dp"
		            			android:gravity="right"
		            			android:text="@string/item1_price"
		           				android:textColor="#000080"
		            			android:typeface="serif"
		            			android:textAppearance="?android:attr/textAppearanceLarge" />
		                     
		                </LinearLayout>
		                
		                <GridLayout
		                    android:id="@+id/expandedItemLayout"
		                    android:layout_width="525dp"
		                    android:layout_height="620dp"
		                    android:layout_marginLeft="15dp"
		                    android:layout_marginTop="10dp"
		                    android:columnCount="2"
    						android:rowCount="2"
		                    android:orientation="horizontal"
		                    android:background="@drawable/border_large"
		                    android:clickable="true">

		                        <ImageView
		                            android:id="@+id/itemImageView"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content"
		                            android:layout_marginLeft="10dp"
		                            android:layout_marginTop="10dp"
		                            android:src="@drawable/salad"
		                            android:layout_column="0"
