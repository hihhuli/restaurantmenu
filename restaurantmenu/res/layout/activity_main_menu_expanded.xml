		                            <RadioButton
										android:id="@+id/radioButton3"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="@string/large"
										android:textAppearance="?android:attr/textAppearanceSmall"
		                                android:textColor="#000080"
		                               	android:typeface="serif"
		                               	android:visibility="invisible"
										android:checked="false" />
		                            
		                            <Button
	                    				android:id="@+id/personalChoicesButton"
	                    				style="@android:style/Widget.Holo.Button.Borderless"
	                    				android:layout_width="wrap_content"
	                    				android:layout_height="wrap_content"
	                    				android:layout_marginLeft="140dp"
	                    				android:clickable="true"
	                    				android:text="@string/hide"
	                    				android:drawablePadding="8dp"
	                    				android:drawableRight="@drawable/up_arrow"
	                    				android:textColor="#000080"
	                    				android:typeface="serif"
	                   					android:textAppearance="?android:attr/textAppearanceMedium" />
		                            
		                		</LinearLayout>
		                        
		                </GridLayout>

		        	</LinearLayout>
	                
	            </ScrollView>
	            
	            <LinearLayout
	                android:id="@+id/buttonLayout2"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:gravity="center_vertical"
	                android:orientation="horizontal" >
	
	                <Button
	                    android:id="@+id/languagesButton"
	                    style="@android:style/Widget.Holo.Button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="20dp"
	                    android:clickable="true"
	                    android:drawablePadding="10dp"
	                    android:drawableLeft="@drawable/previous_button"
	                    android:text="@string/to_languages"
	                    android:textColor="#000080"
	                    android:textStyle="bold"
	                    android:typeface="serif"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	
	                <Button
	                    android:id="@+id/myOrderButton"
	                    style="@android:style/Widget.Holo.Button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="20dp"
	                    android:clickable="true"
	                    android:text="@string/my_order"
	                    android:textColor="#000080"
	                    android:textStyle="bold"
	                    android:typeface="serif"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	                
	                <Button
	                    android:id="@+id/checkoutButton"
	                    style="@android:style/Widget.Holo.Button"
	                    android:layout_width="wrap_content"
	                    android:layout_height="70dp"
	                    android:layout_marginLeft="20dp"
	                    android:clickable="true"
	                    android:drawablePadding="10dp"
	                    android:drawableRight="@drawable/next_button"
	                    android:text="@string/checkout"
	                    android:textColor="#000080"
	                    android:textStyle="bold"
	                    android:typeface="serif"
	                    android:textAppearance="?android:attr/textAppearanceLarge" />
	            </LinearLayout>
	            
			</LinearLayout>
        </FrameLayout>
    </LinearLayout>

