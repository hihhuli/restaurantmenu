<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="800dp"
    android:background="@drawable/border_large"
    android:orientation="vertical"
    android:gravity="right"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
	
    <Button
	 	android:id="@+id/waiterButton"
	    style="@android:style/Widget.Holo.Button"
	    android:layout_width="wrap_content"
	    android:layout_height="70dp"
	    android:layout_marginRight="10dp"
	    android:clickable="true"
	    android:padding="10dp"
	   	android:drawablePadding="10dp"
	    android:drawableRight="@android:drawable/ic_popup_reminder"
	    android:text="@string/call_waiter"
	    android:textColor="#000080"
	    android:textStyle="bold"
	    android:typeface="serif"
	    android:onClick="callWaiterClicked"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
	   
    <TextView 
        android:id="@+id/waitingOrderView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="20dp"
	    android:layout_gravity="left"
	    android:text="@string/waiting_order"
	    android:textColor="#000080"
	    android:textStyle="bold"
	    android:typeface="serif"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
    
	<View
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:background="#000080" />
	
	<LinearLayout
	    android:id="@+id/waitingItemTitleLayout1"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="20dp"
       	android:layout_gravity="left"
       	android:orientation="horizontal">
	            
	    <TextView 
			android:id="@+id/itemTitleView1"
		    android:layout_width="245dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:text="@string/waiting_item_title1"
		    android:textColor="#000080"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView 
		    android:id="@+id/itemPriceView1"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:gravity="right"
		    android:text="@string/waiting_item_price1"
		    android:textColor="#000080"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	            
	</LinearLayout>    
	
	<LinearLayout
       	android:id="@+id/waitingItemLayout1"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
     	android:layout_marginLeft="20dp"
       	android:layout_gravity="left"
       	android:orientation="horizontal" >
       	
	    <LinearLayout 
	        android:id="@+id/waitingItemInfoLayout1"
       		android:layout_width="215dp"
       		android:layout_height="wrap_content"
       		android:layout_gravity="center_vertical"
       		android:orientation="vertical">
	        
	        <TextView 
	            android:id="@+id/waitingItem1Info1"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:gravity="right"
		    	android:text="@string/waiting_item1_info1"
		    	android:textColor="#000080"
		    	android:typeface="serif"
		    	android:textAppearance="?android:attr/textAppearanceMedium"/>
	        
	        <TextView 
	            android:id="@+id/waitingItem1Info2"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="10dp"
		    	android:gravity="right"
		    	android:text="@string/waiting_item1_info2"
		    	android:textColor="#000080"
		    	android:typeface="serif"
		    	android:textAppearance="?android:attr/textAppearanceMedium"/>

	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/waitingItemButtonLayout1"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_marginLeft="30dp"
       		android:orientation="vertical">
	   
	        <Button
	        	android:id="@+id/removeFromOrderButton1" 
	        	style="@android:style/Widget.Holo.Button.Borderless"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:text="@string/remove_from_order"
	            android:drawablePadding="10dp"
	            android:drawableLeft="@android:drawable/ic_delete"
	            android:textColor="#000080"
	            android:typeface="serif"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <Button
	        	android:id="@+id/editChoiceButton" 
	        	style="@android:style/Widget.Holo.Button.Borderless"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:clickable="true"
	            android:text="@string/edit_item"
	            android:drawablePadding="11dp"
	            android:drawableLeft="@drawable/pen"
	            android:textColor="#000080"
	            android:typeface="serif"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	    </LinearLayout>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/waitingItemTitleLayout2"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginTop="20dp"
       	android:layout_gravity="left"
       	android:orientation="horizontal">
	            
	    <TextView 
			android:id="@+id/itemTitleView2"
		    android:layout_width="245dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:text="@string/waiting_item_title2"
		    android:textColor="#000080"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

		<TextView 
		    android:id="@+id/itemPriceView2"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:gravity="right"
		    android:text="@string/waiting_item_price2"
		    android:textColor="#000080"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
	            
	</LinearLayout>    
	
	<LinearLayout
       	android:id="@+id/waitingItemLayout2"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
     	android:layout_marginLeft="20dp"
       	android:layout_gravity="left"
       	android:orientation="horizontal" >
       	
	    <LinearLayout 
	        android:id="@+id/waitingItemInfoLayout2"
       		android:layout_width="215dp"
       		android:layout_height="wrap_content"
       		android:layout_gravity="center_vertical"
       		android:orientation="vertical">
	        
	        <TextView 
	            android:id="@+id/waitingItem2Info1"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:gravity="right"
		    	android:text="@string/waiting_item2_info1"
		    	android:textColor="#000080"
		    	android:typeface="serif"
		    	android:textAppearance="?android:attr/textAppearanceMedium"/>

	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/waitingItemButtonLayout2"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:layout_marginLeft="30dp"
       		android:orientation="vertical">
	   
	        <Button
	        	android:id="@+id/removeFromOrderButton2" 
	        	style="@android:style/Widget.Holo.Button.Borderless"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:text="@string/remove_from_order"
	            android:drawablePadding="10dp"
	            android:drawableLeft="@android:drawable/ic_delete"
	            android:textColor="#000080"
	            android:typeface="serif"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        
	        <Button
	        	android:id="@+id/editChoiceButton2" 
	        	style="@android:style/Widget.Holo.Button.Borderless"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4dp"
	            android:clickable="true"
	            android:text="@string/edit_item"
	            android:drawablePadding="11dp"
	            android:drawableLeft="@drawable/pen"
	            android:textColor="#000080"
	            android:typeface="serif"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	    </LinearLayout>
	    
	</LinearLayout>
	
	<View
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:background="#000080" />
	
	<LinearLayout
	    android:id="@+id/totalSumLayout"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:orientation="horizontal">
	    
		<TextView 
	        android:id="@+id/totalView"
		    android:layout_width="245dp"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_gravity="left"
		    android:text="@string/total"
		    android:textColor="#000080"
		    android:textStyle="bold"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
    
		<TextView 
		    android:id="@+id/totalPriceView"
		    android:layout_width="80dp"
		    android:layout_height="wrap_content"
		    android:gravity="right"
		    android:text="@string/total_price_val"
		    android:textColor="#000080"
		    android:typeface="serif"
		    android:textAppearance="?android:attr/textAppearanceLarge" />
		
	</LinearLayout>	
		
	 <View
	    android:layout_width="wrap_content"
       	android:layout_height="0dp" 
	    android:layout_weight="1"/>
	
   	<LinearLayout
       	android:id="@+id/buttonLayout"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_marginRight="10dp"
       	android:orientation="horizontal" >
   	    
   	    <Button
   	        android:id="@+id/closeButton"
   	        style="@android:style/Widget.Holo.Button"
   	        android:layout_width="120dp"
   	        android:layout_height="70dp"
   	        android:layout_gravity="bottom"
   	        android:layout_marginRight="10dp"
   	        android:clickable="true"
   	        android:padding="10dp"
   	        android:text="@string/close"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:textColor="#000080"
   	        android:textStyle="bold"
   	        android:onClick="closeMyOrderClicked"
   	        android:typeface="serif" />
   	     	    
   	    <Button
   	        android:id="@+id/clearAllButton"
   	        style="@android:style/Widget.Holo.Button"
   	        android:layout_width="120dp"
   	        android:layout_height="70dp"
   	        android:layout_gravity="bottom"
   	        android:layout_marginRight="10dp"
   	        android:clickable="true"
   	        android:padding="10dp"
   	        android:text="@string/clear_all"
   	        android:textAppearance="?android:attr/textAppearanceLarge"
   	        android:textColor="#000080"
   	        android:textStyle="bold"
   	        android:onClick="clearMyOrderClicked"
   	        android:typeface="serif" />
   	    
   	    <Button
		 	android:id="@+id/confirmOrderButton"
		    style="@android:style/Widget.Holo.Button"
		    android:layout_width="130dp"
		    android:layout_height="80dp"
		    android:clickable="true"
		    android:padding="10dp"
		    android:text="@string/confirm_order"
		    android:textColor="#000080"
		    android:textStyle="bold"
		    android:typeface="serif"
		    android:onClick="confirmMyOrderClicked"
		    android:textAppearance="?android:attr/textAppearanceLarge" />

   	</LinearLayout>
   
</LinearLayout>
