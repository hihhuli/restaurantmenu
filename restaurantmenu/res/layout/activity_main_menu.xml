<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2B48C"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/tabbar"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/startersButton"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/starters"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/pizzasButton"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/pizzas"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/pastasButton"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/pastas"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/burgersButton"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/burgers"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/drinksButton"
                    style="@android:style/Widget.Holo.Button.Borderless"
                    android:layout_width="110dp"
                    android:layout_height="43dp"
                    android:clickable="true"
                    android:text="@string/drinks"
                    android:textColor="#000080"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </TabWidget>
            
       <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:orientation="vertical" />
	</LinearLayout>
</TabHost>